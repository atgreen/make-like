#!/bin/sh

set -e

podman pod stop <%= @ app-name %>-pod || true
podman pod rm <%= @ app-name %>-pod || true

BASE_HASH=$(sha512sum src/<%= @ app-name %>.asd | cut -b 1-8)
podman images | grep ${BASE_HASH} > /dev/null 2>&1 || podman build -f build/Dockerfile.base --no-cache -t <%= @ app-name %>-base:${BASE_HASH} .

podman build -f build/Dockerfile -t <%= @ app-name %>:latest --no-cache --from <%= @ app-name %>-base:${BASE_HASH} src

cat test/test-pod.yml | sed -e 's/\/home\/runner\/work\/<%= @ app-name %>\/<%= @ app-name %>/./' | podman play kube -

timeout -s TERM 45 bash -c 'while [[ "$(curl -s -o /dev/null -L -w ''%{http_code}'' http://localhost:8080/health)" != "200" ]]; do echo "Waiting for http://localhost:8080/health" && sleep 2; done'

echo ===========================================================================
echo
echo Application running on http://localhost:8080
echo Promethus metrics are available on http://localhost:9101/metrics
echo
echo Use emacs to \'sly-connect\' to localhost port 4005
echo
echo Run \'make podman-stop\' to stop the test pod
echo
echo ===========================================================================

podman logs -f <%= @ app-name %>-pod-<%= @ app-name %>
